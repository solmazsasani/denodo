CREATE OR REPLACE VIEW dv_department_details FOLDER = '/d01e02 - joins/3. integration view' AS SELECT bv_departments.department_id AS department_id, bv_departments.department_name AS department_name, bv_departments.manager_id AS manager_id, bv_employees.first_name AS first_name, bv_employees.last_name AS last_name, bv_employees.email AS email, bv_departments.location_id AS location_id, locations.street_address AS street_address, locations.postal_code AS postal_code, locations.city AS city, locations.state_province AS state_province, countries.country_name AS country_name, regions.region_name AS region_name FROM (((bv_departments AS bv_departments INNER JOIN bv_employees AS bv_employees ON bv_departments.manager_id = bv_employees.employee_id ) INNER JOIN locations AS locations ON bv_departments.location_id = locations.location_id ) INNER JOIN countries AS countries ON locations.country_id = countries.country_id ) INNER JOIN regions AS regions ON countries.region_id = regions.region_id ;

